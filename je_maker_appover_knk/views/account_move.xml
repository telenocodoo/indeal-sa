    <record model="ir.ui.view" id="view_account_move_inherits">
        <field name="name">account.move.form.mods</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form" />
        <field name="groups_id" eval="[(6, 0, [ref('je_maker_appover_knk.approver_user') ])]" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='journal_id']" position="attributes">
                <attribute name="groups">je_maker_appover_knk.approver_user</attribute>
            </xpath>
            <xpath expr="//notebook//page[@id='aml_tab']" position="attributes">
                <attribute name="groups">je_maker_appover_knk.approver_user</attribute>
            </xpath>
            <xpath expr="//header//button[@name='action_post']" position="before">
                <button name="button_confirm_review" string="Reviewed" type="object" class="oe_highlight" groups="je_maker_appover_knk.review_user" attrs="{'invisible' : [('state', '=', 'posted'), ('move_type', 'not in', ('entry'))]}" />
                <button name="button_reset_to_post" string="Reset To Posted" type="object" class="oe_highlight" groups="je_maker_appover_knk.approver_user" attrs="{'invisible' : [('state', '!=', 'cancel'),('move_type', 'not in', ('entry'))]}" />

            </xpath>
            
            <xpath expr="//button[@name='action_invoice_sent']" position="attributes">
                <attribute name="invisible">0</attribute>
            </xpath>
            <xpath expr="//button[@name='preview_invoice']" position="attributes">
                <attribute name="invisible">0</attribute>
            </xpath>
            <xpath expr="//button[@name='%(account.action_view_account_move_reversal)d']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//button[@name='action_post']" position="attributes">
                <attribute name="attrs">{'invisible': ['|', ('state', 'not in', ['draft', 'review_to_post']), ('move_type', 'not in', ('entry'))]}</attribute>
                <!-- attrs="{'invisible': []}" -->
            </xpath>

            <xpath expr="//button[@name='action_post']" position="attributes">
                <attribute name="groups">je_maker_appover_knk.approver_user</attribute>
            </xpath>
<!-- review_to_post -->
            <!-- <xpath expr="//button[@name='action_post']" position="attributes">
                <attribute name="groups">je_maker_appover_knk.review_user</attribute>
            </xpath> -->
<!-- =============================================================== -->
            
            <!-- <xpath expr="//button[@name='action_post']" position="attributes">
                <attribute name="groups">je_maker_appover_knk.review_user</attribute>
            </xpath>
            <xpath expr="//button[@name='action_post']" position="attributes">
                <attribute name="attrs">{'invisible': [('state', 'not in', ['draft', 'review_to_post'])]}</attribute>
            </xpath> -->

            <!-- ==================================================== -->

            <xpath expr="//button[@name='button_cancel']" position="attributes">
                <attribute name="groups">je_maker_appover_knk.approver_user</attribute>
            </xpath>
            <xpath expr="//button[@name='button_cancel']" position="attributes">
                <attribute name="attrs">{'invisible': [('state', 'not in', ['draft', 'ready_to_post'])]}</attribute>
            </xpath>
            <xpath expr="//button[@name='button_draft']" position="attributes">
                <attribute name="groups">je_maker_appover_knk.approver_user</attribute>
            </xpath>

            <xpath expr="//page[@id='other_tab_entry']//field[@name='company_id']" position="after">
                <!-- <field name="inalterable_hash" groups="base.group_no_one"/> -->
                <field name="user_id" attrs="{'invisible': [ ('move_type', 'not in', ('entry'))]}" />      
                <!-- <field name="approved_jv" attrs="{'invisible': [ ('move_type', 'not in', ('entry'))]}"/>       -->
                <field name="reviwed_jv" attrs="{'invisible': [ ('move_type', 'not in', ('entry'))]}"/>
                <field name="approved_jv" attrs="{'invisible': [ ('move_type', 'not in', ('entry'))]}"/>      

            </xpath>
           
           


        </field>
